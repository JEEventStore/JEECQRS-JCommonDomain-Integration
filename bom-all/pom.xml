    <name>JEECQRS JCommonDomain Integration: Dependency BoM (Bill of Materials)</name>

    <dependencyManagement>
        <dependencies>

            <dependency>
                <groupId>org.jeecqrs</groupId>
                <artifactId>jeecqrs-bom-all</artifactId>
                <version>${version.jeecqrs}</version>
                <scope>import</scope>
                <type>pom</type>
            </dependency>

            <dependency>
                <groupId>org.jeecqrs</groupId>
                <artifactId>jcommondomain-bom</artifactId>
                <version>${version.jcommondomain}</version>
