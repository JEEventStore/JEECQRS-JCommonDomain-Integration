<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="         http://java.sun.com/xml/ns/persistence         http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

    <persistence-unit name="JEECQRSServicesPU" transaction-type="JTA">
        <jta-data-source>datasources/JEECQRSServicesDS</jta-data-source>
        <properties>
            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.format_sql" value="true"/>
            <!--property name="hibernate.hbm2ddl.auto" value="validate"/-->
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.connection.charSet" value="UTF-8"/>
            <property name="eclipselink.logging.level" value="FINE"/>
            <property name="eclipselink.logging.level.sql" value="FINE"/>
            <property name="eclipselink.logging.parameters" value="true"/>
        </properties>
        <class>org.jeeventstore.persistence.jpa.EventStoreEntry</class>
        <class>org.jeecqrs.sagas.tracker.jpa.JPASagaTrackerEntry</class>
    </persistence-unit>
    
</persistence>
